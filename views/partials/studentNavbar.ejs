<div class="flex justify-center w-full h-[15%] p-4">
    <div class="flex flex-col justify-center items-end w-full bg-gray-50 rounded-xl shadow-lg px-8">
        <div class="flex justify-center items-center space-x-2">
            <div class="px-4 py-2 bg-[#0082E3] rounded-full">
                <h1 class="text-[#ffffff] font-semibold text-lg">
                    <%= users?.fullname.charAt(0) %>
                </h1>
            </div>
            <button id="dropdownDefaultButton" data-dropdown-toggle="dropdown"
                class="focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                type="button">
                <h1 class="text-gray-700 font-semibold text-lg">
                    <%= users?.fullname %>
                </h1> <svg class="w-4 h-4 ml-2" aria-hidden="true" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </button>
            <!-- Dropdown menu -->
            <div id="dropdown" class="z-10 hidden bg-white border rounded-sm shadow w-44 dark:bg-gray-700">
                <ul class="text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownDefaultButton">
                    <li>
                        <a href="/student-profile/<%= users.id %>"
                            class="block px-4 py-2 font-medium border rounded-sm hover:bg-gray-200 hover:text-gray-900 hover:font-bold dark:hover:bg-gray-600 dark:hover:text-white">Profile</a>
                    </li>
                    <li>
                        <a href="/logout"
                            class="block px-4 py-2 font-medium border rounded-sm hover:bg-gray-200 hover:text-gray-900 hover:font-bold dark:hover:bg-gray-600 dark:hover:text-white">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>